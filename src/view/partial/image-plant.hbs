<div class="card">
  <div class="card">
      {{#each plant.imageUrls}}
        <div class="has-text-centered" style="margin-bottom: 1rem;">
          <figure class="image is-256x256">
            <img src="{{this}}">
          </figure>
          <a class="button is-danger is-small my-2" href="/plant/{{../plant._id}}/deleteImage/{{encodeURI this}}">
            Delete
          </a>
        </div>
      {{/each}}
  </div>
  <div class="card-content">
    <form action="/plant/{{plant._id}}/uploadImage" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label"> <input class="file-input" name="imageFile" type="file" accept="image/png, image/jpeg">
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
           </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-primary">Upload</button>
      </div>
    </form>
  </div>
</div>

<script>
  const fileInput = document.querySelector(".file-input");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector(".file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>