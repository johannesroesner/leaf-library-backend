<div class="box">
  <p class="title"> Add Plant </p>
  <form action="/garden/addPlant" method="POST">
    <div class="field">
      <label class="label">Common Name</label>
      <input class="input" type="text" placeholder="Enter common name" name="commonName" required />
    </div>

    <div class="field">
      <label class="label">Scientific Name</label>
      <input class="input" type="text" placeholder="Enter scientific name" name="scientificName" required />
    </div>

    <div class="field">
      <label class="label">Type</label>
      <div class="control">
        <div class="select">
          <select name="type" required>
            <option value="">Select type</option>
            <option value="Tree">Tree</option>
            <option value="Flower">Flower</option>
            <option value="Fern">Fern</option>
            <option value="Moss">Moss</option>
            <option value="Grass">Grass</option>
            <option value="Aquatic Plant">Aquatic Plant</option>
            <option value="Climber">Climber</option>
            <option value="Other">Other</option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label">Biome</label>
      <div class="control">
        <div class="select">
          <select name="biome" required>
            <option value="">Select biome</option>
            <option value="Urban">Urban</option>
            <option value="Meadow">Meadow</option>
            <option value="Forest">Forest</option>
            <option value="Pond">Pond</option>
            <option value="River">River</option>
            <option value="Sea">Sea</option>
            <option value="Desert">Desert</option>
            <option value="Other">Other</option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label">Note (optional)</label>
      <textarea class="textarea" placeholder="Add a note about this plant" name="note"></textarea>
    </div>

    <div class="field">
      <label class="label">Latitude</label>
      <input class="input" type="number" name="latitude" placeholder="Enter latitude" step="0.0000001" min="-90" max="90" required />
    </div>

    <div class="field">
      <label class="label">Longitude</label>
      <input class="input" type="number" name="longitude" placeholder="Enter longitude" step="0.0000001" min="-180" max="180" required />
    </div>

    <div class="field">
      <button class="button is-primary" type="submit">Add Plant</button>
    </div>
  </form>
</div>