{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    // enviroment settings
    "module": "nodenext",
    "target": "esnext",
    // For nodejs:
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],
    // other outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // stricter typechecking options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // recommended options
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
